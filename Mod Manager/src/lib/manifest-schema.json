{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"id": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"authors": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"version": {
			"type": "string"
		},
		"frameworkVersion": {
			"type": "string"
		},
		"updateCheck": {
			"type": "string"
		},
		"contentFolder": {
			"type": "string"
		},
		"blobsFolder": {
			"type": "string"
		},
		"localisation": {
			"type": "object",
			"properties": {
				"english": {
					"type": "object",
					"properties": {},
					"required": []
				},
				"french": {
					"type": "object",
					"properties": {},
					"required": []
				},
				"italian": {
					"type": "object",
					"properties": {},
					"required": []
				},
				"german": {
					"type": "object",
					"properties": {},
					"required": []
				},
				"spanish": {
					"type": "object",
					"properties": {},
					"required": []
				},
				"russian": {
					"type": "object",
					"properties": {},
					"required": []
				},
				"chineseSimplified": {
					"type": "object",
					"properties": {},
					"required": []
				},
				"chineseTraditional": {
					"type": "object",
					"properties": {},
					"required": []
				},
				"japanese": {
					"type": "object",
					"properties": {},
					"required": []
				}
			},
			"required": ["english", "french", "italian", "german", "spanish", "russian", "chineseSimplified", "chineseTraditional", "japanese"]
		},
		"localisationOverrides": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "object",
					"properties": {
						"english": {
							"type": "object",
							"properties": {},
							"required": []
						},
						"french": {
							"type": "object",
							"properties": {},
							"required": []
						},
						"italian": {
							"type": "object",
							"properties": {},
							"required": []
						},
						"german": {
							"type": "object",
							"properties": {},
							"required": []
						},
						"spanish": {
							"type": "object",
							"properties": {},
							"required": []
						},
						"russian": {
							"type": "object",
							"properties": {},
							"required": []
						},
						"chineseSimplified": {
							"type": "object",
							"properties": {},
							"required": []
						},
						"chineseTraditional": {
							"type": "object",
							"properties": {},
							"required": []
						},
						"japanese": {
							"type": "object",
							"properties": {},
							"required": []
						}
					},
					"required": ["english", "french", "italian", "german", "spanish", "russian", "chineseSimplified", "chineseTraditional", "japanese"]
				}
			}
		},
		"localisedLines": {
			"type": "object",
			"properties": {},
			"required": []
		},
		"packagedefinition": {
			"type": "array",
			"items": {
				"anyOf": [
					{
						"type": "object",
						"properties": {
							"type": {
								"type": "string"
							},
							"name": {
								"type": "string"
							},
							"parent": {
								"type": "string"
							},
							"partitionType": {
								"type": "string"
							}
						},
						"required": ["type", "name", "parent", "partitionType"]
					},
					{
						"type": "object",
						"properties": {
							"type": {
								"type": "string"
							},
							"partition": {
								"type": "string"
							},
							"path": {
								"type": "string"
							}
						},
						"required": ["type", "partition", "path"]
					}
				]
			}
		},
		"thumbs": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"runtimePackages": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"chunk": {
						"type": "number"
					},
					"path": {
						"type": "string"
					}
				},
				"required": ["chunk", "path"]
			}
		},
		"dependencies": {
			"type": "array",
			"items": {
				"anyOf": [
					{
						"type": "string"
					},
					{
						"type": "object",
						"properties": {
							"runtimeID": {
								"type": "string"
							},
							"toChunk": {
								"type": "number"
							}
						},
						"required": ["runtimeID", "toChunk"]
					}
				]
			}
		},
		"supportedPlatforms": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"requirements": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"loadBefore": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"loadAfter": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	},
	"required": ["id", "name", "description", "authors", "version", "frameworkVersion"]
}
